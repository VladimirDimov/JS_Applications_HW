<form class="form-signin">
	<h2 class="form-signin-heading">Register or Login</h2>
	<label for="tb-username" class="sr-only">Password</label>
	<input type="text" id="tb-username" class="form-control" placeholder="Username" required autofocus>
	<label for="tb-password" class="sr-only">Password</label>
	<input type="password" id="tb-password" class="form-control" placeholder="Password" required>
	<div class="checkbox">
		<label>
			<input type="checkbox" value="remember-me"> Remember me
		</label>
	</div>
	<button id="btn-login" class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
	<button id="btn-register" class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
</form>